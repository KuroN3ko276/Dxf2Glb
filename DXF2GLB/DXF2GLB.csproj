<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <!-- Enable Server GC for better performance with large files -->
        <ServerGarbageCollection>true</ServerGarbageCollection>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="IxMilia.Dxf" Version="0.8.1" />
      <PackageReference Include="netDxf" Version="2023.11.10" />
      <PackageReference Include="SharpGLTF.Toolkit" Version="1.0.6" />
    </ItemGroup>

</Project>
